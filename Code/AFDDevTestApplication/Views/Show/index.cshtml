@model List<AFDDevTestApplication.Models.CustomerModel>

@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
thead {color:green;}
tbody {color:blue;}
tfoot {color:red;}

table, th, td {
    border: 1px solid black;
}

.webGrid-footer > td {
  padding-top: 10px;
}

  .webGrid-footer > td > a {
    background-color: #f5f5f5;
    border: 1px solid #ccc;
    border-radius: 3px;
    padding: 3px 7px;
  }

  .webGrid-footer > td > a:hover {
    background-color: #f0f0f0;
  }
</style>

<div id = "wgrid">
@{
    if (Model != null && Model.Count > 0) 
    {
     var grid = new WebGrid(Model, canPage: true, rowsPerPage: 10);
        
        @grid.GetHtml(tableStyle: "webGrid",
                htmlAttributes: new { id = "DataTable" },
                headerStyle: "header",
                mode:WebGridPagerModes.All,
                alternatingRowStyle: "alt",
                columns: grid.Columns(
                         grid.Column("Property"),
                         grid.Column("CustomerName"),
                         grid.Column("Value"),
                         grid.Column("Action"),
                         grid.Column("File"),
                         grid.Column("Status"),
                         grid.Column("Hash")
                                  
        ));   
          
       }                         
                           
}
        
</div>

<div>
@{
    if(Model ==null || Model.Count == 0)
    {
        <p>No data is present in the database</p>
    }
}
</div>
